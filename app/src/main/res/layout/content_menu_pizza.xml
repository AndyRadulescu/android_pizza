<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MenuPizzaActivity"
    tools:showIn="@layout/activity_menu_pizza">

    <ScrollView
        android:id="@+id/pizza_menu_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pizza_image"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:contentDescription="@string/pizza"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/pizza_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="36dp"
                android:text="Info:"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pizza_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="36dp"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="10dp"
                android:text="Sosuri"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:background="@drawable/table_border"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <TableRow style="@style/table_style">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sos alb (3.00 lei)"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp">

                        <ImageButton
                            android:id="@+id/ib_sos_alb_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:contentDescription="@string/minus"
                            android:src="@drawable/ic_minus" />

                        <TextView
                            android:id="@+id/tf_sos_alb"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:gravity="center" />

                        <ImageButton
                            android:id="@+id/ib_sos_alb_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:contentDescription="@string/plus"
                            android:src="@drawable/ic_plus" />
                    </LinearLayout>
                </TableRow>

                <TableRow style="@style/table_style">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sos alb picant (3.00 lei)"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp">

                        <ImageButton
                            android:id="@+id/ib_sos_alb_picant_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:src="@drawable/ic_minus" />

                        <TextView
                            android:id="@+id/tf_sos_alb_picant"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:gravity="center" />

                        <ImageButton
                            android:id="@+id/ib_sos_alb_picant_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:src="@drawable/ic_plus" />
                    </LinearLayout>
                </TableRow>

                <TableRow style="@style/table_style">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sos rosu (3.00 lei)"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp">

                        <ImageButton
                            android:id="@+id/ib_sos_rosu_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:src="@drawable/ic_minus" />

                        <TextView
                            android:id="@+id/tf_sos_rosu"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:gravity="center" />

                        <ImageButton
                            android:id="@+id/ib_sos_rosu_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:src="@drawable/ic_plus" />
                    </LinearLayout>

                </TableRow>

                <TableRow style="@style/table_style">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sos rosu picant (3.00 lei)"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp">

                        <ImageButton
                            android:id="@+id/ib_sos_rosu_picant_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:src="@drawable/ic_minus"
                            android:contentDescription="@string/minus" />

                        <TextView
                            android:id="@+id/tf_sos_rosu_picant"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:gravity="center" />

                        <ImageButton
                            android:id="@+id/ib_sos_rosu_picant_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:src="@drawable/ic_plus"
                            android:contentDescription="@string/plus" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="10dp"
                android:text="@string/toppings"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/table_border"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <TableRow
                    style="@style/table_style"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ham"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/checkbox_ham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/salami"
                        android:textSize="14sp" />

                    <CheckBox android:id="@+id/checkbox_salami" />

                </TableRow>


                <TableRow style="@style/table_style">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pepper"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/checkbox_pepper"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/corn"
                        android:textSize="14sp" />

                    <CheckBox android:id="@+id/checkbox_corn" />
                </TableRow>

                <TableRow style="@style/table_style">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/olives"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/checkbox_olives"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mushrooms"
                        android:textSize="14sp" />

                    <CheckBox android:id="@+id/checkbox_mushrooms" />
                </TableRow>

                <TableRow style="@style/table_style">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/feta"
                        android:textSize="14sp" />

                    <CheckBox
                        android:id="@+id/checkbox_feta"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/onion"
                        android:textSize="14sp" />

                    <CheckBox android:id="@+id/checkbox_ceapa" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pizza_menu_info"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/pizza_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:onClick="addToCart"
            android:text="@string/to_cart"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>